<div class="container">
  <div class="row">
      <div class="col-md-8">
        <div class="page-header">
          <h1><strong>pro<font color="#00ff00">D</font>igee</strong> <small>The Bootcamp coder job market place.</small></h1>
          </div>
        </div>
          <div class="col-md-4">
<br />
<br />
          <a href="/signup"><button type="button" class="btn btn-primary btn-lg btn-block">Sign Up</button></a>
          <br />
          <a href="/login"><button type="button" class="btn btn-success btn-lg btn-block">Login</button></a>
            </div>

     </div>
   </div>
<section id="jobs-table" class="container">
         <table class="table table-hover">
            <caption>Recent Postings</caption>
              <thead>
                 <tr>
                    <th>Date Posted</th>
                    <th>Job Title</th>
                    <th>Job Description</th>
                    <th>Pay</th>
                    <th>Apply</th>
                 </tr>
              </thead>
              <tbody>
                {{#each jobs}}
                 <tr>
                    <td>{{this.createdAt}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.pay}}</td>
                    <td><a href="/apply/{{this.id}}"><button type="submit" class="btn btn-success apply">Apply</button></a></td>
                    <p hidden>{{this.id}}</p>
                 </tr>
                 {{/each}}
              </tbody>
           </table>
</section>
<footer class="footer"></footer>
